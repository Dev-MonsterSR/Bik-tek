APP_NAME="Sistema Biblioteca"
APP_ENV=production
APP_KEY=base64:tu_clave_de_aplicacion_aqui
APP_DEBUG=false
APP_URL=https://tu-dominio.com

APP_LOCALE=es
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=es_ES

# Base de datos para Digital Ocean
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=biblioteca_db
DB_USERNAME=tu_usuario_db
DB_PASSWORD=tu_password_db

# Configuración de archivos estáticos
FILESYSTEM_DISK=public
PUBLIC_DISK_URL=${APP_URL}/storage

# Configuración de sesiones
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Cache
CACHE_STORE=database

# Logs
LOG_CHANNEL=stack
LOG_LEVEL=error

# Mail (configurar según proveedor)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=tu_email@gmail.com
MAIL_PASSWORD=tu_password_email
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="${MAIL_USERNAME}"
MAIL_FROM_NAME="${APP_NAME}"

# Configuración específica para Digital Ocean
FORCE_HTTPS=true
ASSET_URL=${APP_URL}
